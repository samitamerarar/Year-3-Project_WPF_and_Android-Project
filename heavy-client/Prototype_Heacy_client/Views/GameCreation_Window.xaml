<Window x:Class="Prototype_Heacy_client.Views.GameCreation_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prototype_Heacy_client.Views.UserControls"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="GameCreation_Window" Height="950" Width="1600">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Name="Game_Creation"  Background="Gray">
        </Grid>
        <Grid Grid.Column="1" Background="Gray">
            <Grid x:Name="Draw_Interface">
            </Grid>


            <Button VerticalAlignment="Bottom" x:Name="Simulation" Click="Simulation_Click" Grid.Column="1" FontSize="16"  FontWeight="Bold" Foreground="White" Content="Voir la simulation" Margin="100 14"></Button>

         
           
        </Grid>
       
    </Grid>
</Window>
