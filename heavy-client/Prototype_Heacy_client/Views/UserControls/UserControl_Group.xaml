<UserControl x:Class="Prototype_Heacy_client.Views.UserControls.UserControl_Group"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prototype_Heacy_client.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800" BorderThickness="0">
   
    <Grid Height="45" Margin="15 10 15 15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#FFE4E4E4"  >

            <Label x:Name="GroupName" Background="AliceBlue" Height="45" Padding="15 13 15 11" Foreground="black" FontSize="15" Margin="0 0 0 2" />
        </Border>
        <Border Grid.Column="1"  Background="#FFE4E4E4"  >
            <Border Margin=" 0 0 0 2"  Background="AliceBlue">
                <Button Height="24" Width=" 80" FontSize="12" Content="Entrer" Command="{Binding EnterGroup}" Background="#FF3580BF"  Margin="15 0"  Foreground="White"></Button>
            </Border>
        </Border>
    </Grid>
</UserControl>
