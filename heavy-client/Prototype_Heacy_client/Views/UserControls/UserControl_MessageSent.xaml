<UserControl x:Class="Prototype_Heacy_client.Views.UserControls.UserControl_MessageSent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prototype_Heacy_client.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Border HorizontalAlignment="Right" Background="LightGray" Grid.Column="1" CornerRadius="15 15 0 15" Margin="10 12">
            <TextBox AcceptsReturn="True" IsReadOnly="True" x:Name="theMessage" MaxWidth="250" Margin="15"  TextWrapping="Wrap" />
        </Border>
        <TextBlock Grid.Column="1" x:Name="date" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="10" Margin="10 0"/>

    </Grid>
</UserControl>
