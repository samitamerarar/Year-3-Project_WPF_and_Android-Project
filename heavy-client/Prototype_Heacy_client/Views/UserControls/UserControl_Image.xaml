<UserControl x:Class="Prototype_Heacy_client.Views.UserControls.UserControl_Image"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prototype_Heacy_client.Views.UserControls"
             mc:Ignorable="d">
   
        <Button Margin="10" Name="button" Padding="20" Background="Transparent" Height="400" Width="600" >
        <Image x:Name="image"  Height="400" Width="600" Margin="0"  Source="{Binding MySource, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
        </Button>
</UserControl>
